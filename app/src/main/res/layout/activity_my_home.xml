                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                tools:ignore="RtlHardcoded">
                <ImageButton
                    android:layout_marginEnd="15dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_message_24"
                    android:id="@+id/btn_MyHomeMsg"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_settings_24"
                    android:id="@+id/btn_MyHomeSetting"/>
            </LinearLayout>

            <!--头像栏-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/btn_MyHomeHeadImag"/>

                <ImageButton
                    android:id="@+id/btn_MyHomeHeadImag"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="20dp"
                    tools:ignore="DuplicateIds,ImageContrastCheck" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/btn_MyHomeHeadImag"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/linearLay_MyHomeHeadWidget">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一只川普"
                        android:textSize="20sp"
                        android:id="@+id/tv_MyHomeUserName"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456789"
                            android:id="@+id/tv_MyHomeUserId"/>

                        <TextView
                            android:id="@+id/tv_MyHomeUserId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123456789"
                            android:textColor="#616161"
                            tools:ignore="DuplicateIds" />

                        <ImageButton
                            android:layout_marginStart="5dp"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/baseline_content_copy_24"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/btn_copyId"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_MyHomeEnterMyInfo"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/baseline_arrow_forward_ios_24" />
            </RelativeLayout>


            <!--关注，动态，粉丝-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    style="@style/myHomeRectBtn"
                    android:background="@drawable/myhome_rect_btn"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#DECDCD">

                    <TextView
                        style="@style/myHomeRectTv"
                        android:text="关注"/>


                    <TextView
                        style="@style/myHomeRectTv"
                        android:text="关注"
                        android:textColor="#6D4C41" />

                    <TextView
