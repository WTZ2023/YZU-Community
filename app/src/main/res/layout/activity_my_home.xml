                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:text="999"
                        android:textSize="20sp" />
                </RelativeLayout>
                <RelativeLayout
                    style="@style/myHomeRectBtn"
                    android:background="@drawable/myhome_rect_btn"
                    android:backgroundTint="#CFE0EE"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="5dp">
                    <TextView
                        style="@style/myHomeRectTv"
                        android:text="粉丝"/>


                    <TextView
                        style="@style/myHomeRectTv"
                        android:text="粉丝"
                        android:textColor="#616161" />

                    <TextView
