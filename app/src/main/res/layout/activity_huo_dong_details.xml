<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HuoDongDetailsActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_huodongDetail"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/white">

    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/iv_huodongDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                     />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="15dp">
                    <TextView
                        android:id="@+id/tv_huodongDetailItemStatus"
                        android:textSize="12sp"
                        android:text="报名中"
                        android:background="#B3E3FF7D"
                        android:gravity="center"
                        android:layout_width="72dp"
                        android:layout_height="30dp" />
<!--                    180,227, 255, 125-->
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间: 2023.4.10 20:00"
                    android:textColor="#B5FFFFFF"
                    android:id="@+id/tv_huodongDetaiReleaseTime"
                    android:textSize="12sp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动时间: 2023.4.10 - 2023.4.10"
                    android:textColor="#B5FFFFFF"
                    android:id="@+id/tv_huodongDetailDuration"
                    android:layout_alignBottom="@+id/tv_huodongDetaiReleaseTime"
                    android:textSize="12sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:layout_alignBottom="@+id/tv_huodongDetailDuration"
                    android:id="@+id/tv_huodongDetailTitle"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="25dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:id="@+id/huodongDetailPrivateHead"
                    app:cardBackgroundColor="#00000000"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/iv_huodongDetailHead"
                        android:background="@drawable/pic_huodongtest"/>

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_huodongDetailUserName"
                    android:layout_toEndOf="@id/huodongDetailPrivateHead"
                    android:layout_centerVertical="true"
                    android:text="川普川普"
                    android:layout_marginStart="10dp"
                    android:textSize="18sp"
                    android:textColor="#C6000000"
                    tools:ignore="NotSibling" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/baseline_arrow_forward_ios_24"
                    tools:ignore="RtlHardcoded" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_update"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动简介"
                    android:textColor="#008c8c"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:padding="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="这里是活动简介这里是活动简介这里是活动简介这里是活动简介这里是活动简介这里是活动简介这里是活动简介这里是活动简介这里是活动简介这里是活动简介这里是活动简介这里是活动简介这里是活动简介"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_update"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间地点"
                    android:textColor="#008c8c"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:padding="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="东校区13教403D\n2.13星期二下午两点半"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/icon_update"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注意事项"
                    android:textColor="#008c8c"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:padding="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项这里是注意事项"/>

        </LinearLayout>


    </ScrollView>



</LinearLayout>